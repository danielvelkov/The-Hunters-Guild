<fieldset>
  <legend>Monsters</legend>
  <div class="add-monster-container">
    <button id="add-monster-button">+ Add Monster</button>
    <section id="monster-forms"></section>
  </div>
</fieldset>

<!-- Template for monster form that will be cloned by JavaScript -->
<template id="monster-form-template">
  <form autocomplete="off" class="monster-form" aria-label="form">
    <label for="monster-select">Large Monsters: </label>
    <select
      class="form-control monster-select"
      name="monster"
      id="monster-select"
      style="width: 300px"
    >
      <option></option>
      <% if (monsters) { %> <% monsters.forEach((monster) => { %>
      <option
        value="<%= monster.id %>"
        data-elements="<%= monster.weaknesses.elements.map((ew) => `${ew.name},${ew.icon}`).join('|') %>"
        data-ailments="<%= monster.weaknesses.ailments.map((ew) => `${ew.name},${ew.icon}`).join('|') %>"
        data-monster-icon="<%= monster.icon %>"
      >
        <%= monster.name %>
      </option>
      <% }) %> <% } %>
    </select>
  </form>
</template>

